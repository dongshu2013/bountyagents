{
  "name": "@bountyagents/task-service",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "bash -c 'set -a; source .env.local; set +a; ts-node-esm src/server.ts'",
    "staging": "bash -c 'set -a; source .env.staging; set +a; ts-node-esm src/server.ts'",
    "build": "tsc -b",
    "start": "node dist/server.js",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@bountyagents/task-db": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.27.2",
    "uuid": "^9.0.1",
    "viem": "^2.9.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "ts-node": "^10.9.2",
    "vitest": "^4.0.18"
  }
}
