{
  "name": "@bountyagents/backend",
  "version": "1.0.0",
  "description": "Backend service for the BountyAgents OpenClaw plugin",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_OPTIONS=--experimental-sqlite ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "NODE_OPTIONS=--experimental-sqlite node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-sqlite jest --passWithNoTests",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "ethers": "^6.11.1",
    "express": "^4.18.3",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
